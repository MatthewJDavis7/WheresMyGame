<div id="form-popup">
  <form id="form-container">
    <h1>New Event</h1>

    <input id="name" type="text" placeholder="Name" name="name">
    <input id="type" type="text" placeholder="Type" name="type">
    <input id="date" type="text" placeholder="Date" name="date">
    <input id="local" type="text" placeholder="Local" name="local">
    <input id="city" type="text" placeholder="City" name="city">
    <input id="state" type="text" placeholder="State" name="state">
    <input id="address" type="text" placeholder="Address" name="address">
    <input id="price" type="number" placeholder="Price" name="price">
    <input id="description" type="text" placeholder="Description" name="description">

    <button id="save-event" type="submit">Save</button>
    <button id="cancel-btn" type="button">Close</button>
  </form>
</div>